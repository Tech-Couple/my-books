{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "no-loops"
  ],
  "extends": [
    "airbnb-base",
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "func-call-spacing": 2,
    "no-console": 2,
    "no-loops/no-loops": 2,
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
